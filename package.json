{
  "name": "smart-gas-delivery-backend",
  "version": "1.0.0",
  "description": "Backend API for Smart Gas Delivery System - Kenya's premier gas delivery platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --watchAll --detectOpenHandles",
    "test:ci": "jest --ci --coverage --detectOpenHandles",
    "seed": "node scripts/seedDatabase.js",
    "seed:users": "node scripts/seedUsers.js",
    "seed:products": "node scripts/seedProducts.js",
    "seed:vendors": "node scripts/seedVendors.js",
    "models:generate": "sequelize-auto -o ./models -d smart_gas_delivery -h localhost -u root -p 3306 -x '' -e mysql --cm pascal --cp camelcase",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write .",
    "docs": "jsdoc -c jsdoc.conf.json",
    "build": "npm install && npm run test:ci"
  },
  "keywords": [
    "gas-delivery",
    "nodejs",
    "express",
    "mysql",
    "sequelize",
    "api",
    "backend",
    "kenya",
    "logistics",
    "delivery"
  ],
  "author": {
    "name": "Smart Gas Delivery Team",
    "email": "dev@smartgas.co.ke"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "geolib": "^3.3.4",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "sequelize": "^6.35.2",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.4",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.1.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "sequelize-auto": "^0.8.8",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartgas-kenya/backend.git"
  },
  "bugs": {
    "url": "https://github.com/smartgas-kenya/backend/issues"
  },
  "homepage": "https://github.com/smartgas-kenya/backend#readme"
}
